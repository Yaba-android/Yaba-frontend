<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/button_close_section"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/close_profile"/>

        <TextView
                android:id="@+id/nav_genre_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_close_section"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:layout_marginStart="32dp"
                android:text="@string/sections"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorTextBlack"/>

        <LinearLayout
                android:layout_width="232dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nav_genre_title"
                android:layout_marginTop="32dp"
                android:background="@color/colorSeparatorViewGrey"
                android:orientation="vertical"/>

    </RelativeLayout>

</RelativeLayout>