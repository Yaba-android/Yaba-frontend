<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_book_details"
        android:fitsSystemWindows="true"
        tools:context=".BookDetailsActivity">

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

            <include layout="@layout/toolbar_application"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    app:layout_scrollFlags="scroll">

                <ImageView
                        android:id="@+id/image_book"
                        android:layout_width="130dp"
                        android:layout_height="214dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/forest_medium"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"/>

                <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="The Friend"
                        android:paddingTop="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:id="@+id/title_book"
                        android:layout_toStartOf="@id/image_book"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"/>

                <TextView
                        android:id="@+id/author_book"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_book"
                        android:gravity="right"
                        android:text="Sigrid Nunez"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_toStartOf="@id/image_book"
                        android:layout_marginEnd="20dp"/>

                <Button
                        android:id="@+id/button_buy_book"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/buy_now"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:layout_toStartOf="@id/image_book"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:background="#33005F"
                        android:layout_above="@+id/button_download_book"/>

                <Button
                        android:id="@+id/button_download_book"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/download_sample"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:layout_toStartOf="@id/image_book"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/transparent"
                        android:layout_alignBottom="@+id/image_book"
                        tools:ignore="SmallSp"/>

            </RelativeLayout>

            <android.support.design.widget.TabLayout
                    android:id="@+id/tabs_book_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:tabIndicatorColor="@android:color/holo_blue_light"
                    app:tabTextColor="@android:color/black"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_scrollFlags="scroll"/>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/fragment_container_book_details"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nav_view_profile"
            app:headerLayout="@layout/nav_profile_header"
            app:menu="@menu/drawer_profile_menu"
            android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>