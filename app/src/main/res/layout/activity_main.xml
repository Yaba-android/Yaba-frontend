<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_profile"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            app:title="Book Store"
            android:fitsSystemWindows="true"
            app:titleTextColor="@android:color/darker_gray"/>

    <android.support.v4.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawer_layout_profile">

        <android.support.design.widget.CoordinatorLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/fragment_container_profile"/>


        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nav_view_profile"
                app:headerLayout="@layout/nav_profile_header"
                app:menu="@menu/drawer_profile_menu"
                android:layout_gravity="start"/>

        <android.support.design.widget.NavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nav_view_genre"
                app:headerLayout="@layout/nav_genre_header"
                app:menu="@menu/drawer_genre_menu"
                android:layout_gravity="end"/>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>