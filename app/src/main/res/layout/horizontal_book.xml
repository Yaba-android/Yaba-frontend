<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_margin="8dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/horizontal_image"
                android:src="@drawable/forest"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingBottom="2dp"/>

        <TextView
                android:id="@+id/horizontal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_image"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:text="Book"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingBottom="2dp"
                tools:ignore="RtlHardcoded"/>

        <TextView
                android:id="@+id/horizontal_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_title"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:text="Description"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:paddingBottom="2dp"
                tools:ignore="RtlHardcoded"/>

        <TextView
                android:id="@+id/horizontal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_desc"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:text="$9.99"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>