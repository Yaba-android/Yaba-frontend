<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/layout_splash_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            tools:ignore="UselessParent">

        <ImageView
                android:id="@+id/logo_splash_screen"
                android:layout_width="@dimen/width_logo_splash_screen"
                android:layout_height="@dimen/height_logo_splash_screen"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/yaba_logo"/>

        <TextView
                android:id="@+id/title_splash_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/noto_sans_family"
                android:textSize="20sp"
                android:textColor="@color/colorTextBlackGroup"
                android:gravity="center"/>

        <TextView
                android:id="@+id/title_bis_splash_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/find_the_books_you_love"
                android:fontFamily="@font/noto_sans_family"
                android:textSize="16sp"
                android:textColor="@color/colorTextGrey"
                android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>